{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST without plan returns error",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with invalid plan returns error",
      "method": "POST",
      "path": "/",
      "body": {
        "plan": "invalid",
        "email": "test@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
